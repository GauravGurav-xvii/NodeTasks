<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Student List</title>
  </head>
  <body>
    <h1>Studnet List</h1>
    <table class="table" border="1" width="100%">
      <thead>
        <tr>
          <th>Sr.No</th>
          <th>Name</th>
          <th>Email</th>
          <th>Phone No.</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% if (students.length > 0) { %> <% for( let i = 0; i <
        students.length; i++ ) { %>
        <tr>
          <td scope="row"><%- students[i].id %></td>
          <td><%- students[i].name %></td>
          <td><%- students[i].email %></td>
          <td><%- students[i].mno %></td>
          <td>
            <a href="/delete-student?id=<%- students[i].id %>">Delete</a>
            <a href="/update-student?id=<%- students[i].id %>">Update</a>
          </td>
        </tr>
        <% } %> <% }else { %>
          <tr>
            <td colspan="5">No Data Found</td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </body>
</html>
